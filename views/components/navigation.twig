<nav role="navigation" class="bg--white">
	<ul>
		{% for item in menu.get_items %}
			<li class="nav-item {{item.classes | join(' ')}} spacing--horiz-half spacing--md-horiz-1">
				<a class="nav-link text--uppercase font--bold color--font " href="{{item.get_link}}">{{item.title}}</a>
				{% if item.get_children %}
					<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item">
								<a class="nav-link text--uppercase font--bold color--font " href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
	{% include 'components/blocks/block--social.twig' %}
</nav><!-- #nav -->